{
  "name": "@dexma/ui-components",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "scripts": {
    "clean-build": "rm -rf build",
    "build:development": "npm run clean-build && webpack --mode development",
    "build:production": "npm run clean-build && webpack --mode production",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "prettier": "prettier --write src/**/*.js",
    "format": "npm run prettier && npm run lint-fix",
    "jest": "NODE_ENV=test jest",
    "storybook": "start-storybook -p 9999 -c src/.storybook",
    "storybook:generate-jest": "jest --json --outputFile=src/test/jest-test-results.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dexma/ui-components.git"
  },
  "keywords": [
    "ui",
    "components",
    "react"
  ],
  "author": "Matias Menker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dexma/ui-components/issues"
  },
  "homepage": "https://github.com/dexma/ui-components#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.5",
    "@storybook/addon-info": "^5.0.5",
    "@storybook/addon-jest": "^5.0.5",
    "@storybook/react": "^5.0.5",
    "autoprefixer": "^9.5.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "jest": "^24.5.0",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "path": "^0.12.7",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "prop-types": "^15.7.2",
    "classnames": "^2.2.6"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,css,md}": [
      "npm run lint-fix && npm run prettier",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg)$": "test-file-stub",
      "\\.(css|less|s?css)$": "identity-obj-proxy"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "test/components/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!dist/"
    ],
    "setupFiles": [
      "<rootDir>/src/test/config/tests-setup.js"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "reporters": [
      "default"
    ]
  },
  "release": {
    "publishDir": "lib"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
